package erronka3;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class DBKonexioa {

    private static final String URL = "jdbc:mysql://localhost:3306/Erronka"; // Cambia 'Erronka' por el nombre de tu base de datos
    private static final String USER = "root"; // Cambia si usas otro usuario
    private static final String PASSWORD = "tu_contraseña"; // Cambia por la contraseña correcta

    public static Connection konektatu() {
        Connection konexioa = null;
        try {
            konexioa = DriverManager.getConnection(URL, USER, PASSWORD);
            System.out.println("Konexioa arrakastatsua!");
        } catch (SQLException e) {
            System.out.println("Errorea konexioan: " + e.getMessage());
        }
        return konexioa;
    }
}
