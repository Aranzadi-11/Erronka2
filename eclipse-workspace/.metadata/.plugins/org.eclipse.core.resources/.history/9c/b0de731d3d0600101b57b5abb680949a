package erronka3;

import javax.swing.*;
import javax.swing.border.EmptyBorder;
import java.awt.*;
import java.util.List;

public class APP extends JFrame {
    private static final long serialVersionUID = 1L;
    private JPanel edukiontzia;

    public APP(String userType) {
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setBounds(100, 100, 800, 600);  // Ajuste de tamaño para una mejor visualización de tablas
        edukiontzia = new JPanel();
        edukiontzia.setBorder(new EmptyBorder(5, 5, 5, 5));
        edukiontzia.setLayout(new BorderLayout());
        setContentPane(edukiontzia);
        setTitle("Aplikazioa");

        // Crear y agregar el panel de tablas al panel principal
        TaulaErakuslea tableViewer = new TaulaErakuslea(userType);
        edukiontzia.add(tableViewer, BorderLayout.CENTER);

        setVisible(true);
    }
}